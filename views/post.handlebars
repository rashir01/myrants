<div>
  Post Title: {{title}}
  <br>
  Post By: {{user.user_name}}
  <br>
  on: {{format_date date_created}}
  <br>
  Text: 
  <p>{{content}} </p>
  
  <br> 
  <p>comments</p>

  {{#each comments as |currentComment|}}
    <p>{{currentComment.user.user_name}} commented: {{currentComment.content}} on {{format_date currentComment.date_created}}</p>
    <hr>
  {{/each}}
  <form class="form new-project-form">
    <div>
      <p hidden id="post-id">{{id}}</p>
    </div>
    <div class="form-group" id='comment-div'></div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary comment-button" id="commen-button">Comment</button>
    </div>

    {{#if (check_equal logged_in_user_id user_id)}}
        <div class="form-group" id="title-div"></div>
        <div class="form-group" id="body-div"></div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary update-button">Update Post</button>
        </div>
    {{/if}}
  </form>

</div>

<script src="/js/update.js"></script>
