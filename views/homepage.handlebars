<!-- Loop over each post in the posts array -->
{{#each post as |currentPost| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="api/posts/{{currentPost.id}}">{{currentPost.title}}</a>
    </h2>
    <p>Posted By {{currentPost.user.user_name}} on {{format_date currentPost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{currentPost.content}}
    </p>
  </div>
</div>
{{/each}}